# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =====================================================
# AUTHENTICATION (NextAuth.js)
# =====================================================
# Secret key for encrypting session tokens
# Generate a new one: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# App URL - Change based on environment
# Local: http://localhost:3000
# Production: https://your-site.netlify.app
NEXTAUTH_URL=http://localhost:3000

# =====================================================
# GOOGLE OAUTH
# =====================================================
# Get these from Google Cloud Console
# https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =====================================================
# CASHFREE PAYMENT GATEWAY
# =====================================================
# Get these from Cashfree Merchant Dashboard
# https://merchant.cashfree.com/
CASHFREE_SECRET_KEY=your_cashfree_secret_key_here
CASHFREE_APP_ID=your_cashfree_app_id_here

# =====================================================
# APP CONFIGURATION
# =====================================================
APP_PORT=3000

# Public URL - accessible in browser
# Local: http://localhost:3000
# Production: https://your-site.netlify.app
NEXT_PUBLIC_APP_URL=http://localhost:3000
